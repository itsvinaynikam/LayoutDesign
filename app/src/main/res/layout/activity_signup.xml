<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SignupActivity">

    <ProgressBar
        android:id="@+id/progressbar"
        android:visibility="gone"
        android:layout_below="@+id/btn_ragister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout

        android:id="@+id/signup_relaticvelayout"
        android:orientation="horizontal"
        android:background="#EDE2D6"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:textSize="25dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:text="Sign up"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/firstname_text"
        android:layout_below="@+id/signup_relaticvelayout"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="First Name"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:paddingLeft="20dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/firstname_editetext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/firstname_text"
        android:background="@drawable/select_layoutbackground"
        android:drawableStart="@drawable/cutome_editetext"
        android:drawablePadding="12dp"
        android:hint="First Name"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />

    <TextView
        android:id="@+id/lastname_text"
        android:layout_below="@+id/firstname_editetext"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="Last Name"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:paddingLeft="20dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/lastname_editetext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/lastname_text"
        android:background="@drawable/select_layoutbackground"
        android:drawableStart="@drawable/cutome_editetext"
        android:drawablePadding="12dp"
        android:hint="Last Name"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />

    <TextView
        android:id="@+id/email_text"
        android:layout_below="@+id/lastname_editetext"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:paddingLeft="20dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/email_editetext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/email_text"
        android:background="@drawable/select_layoutbackground"
        android:drawableStart="@drawable/icon_email"
        android:drawablePadding="12dp"
        android:hint="Email"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />

    <TextView
        android:id="@+id/password_text"
        android:layout_below="@+id/email_editetext"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="Password"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:paddingLeft="20dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/password_editetext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/password_text"
        android:background="@drawable/select_layoutbackground"
        android:drawableStart="@drawable/icon_password"
        android:drawablePadding="12dp"
        android:hint="Password"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />

    <CheckBox
        android:id="@+id/checkbox_cheese"
        android:layout_width="wrap_content"
        android:layout_below="@id/password_editetext"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:text="You Agree To Our Policy"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ragister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:layout_marginRight="30dp"
        android:text="Ragister"
        android:background="@drawable/shapppe"
        android:layout_below="@+id/checkbox_cheese" />
















</RelativeLayout>