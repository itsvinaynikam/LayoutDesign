<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragment.ProfileFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/app_background_colour"
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:src="@drawable/profile_image"
                android:layout_marginTop="80dp"
                android:scaleType="center"
                app:shapeAppearanceOverlay="@style/Circular"
                android:layout_gravity="center_horizontal"
                android:layout_height="120dp"/>


            <TextView
                android:id="@+id/fullname_text"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Vinay Nikam"
                android:textSize="30dp"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardd_view"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="20dp"
            android:elevation="20dp"
            app:cardElevation="20dp"
            android:layout_marginRight="20dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent">
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Photos"
                        android:textSize="20sp"
                        android:textStyle="normal"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:text="125"
                        android:textColor="@color/gradient_end_color"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Follower"
                        android:textSize="20sp"
                        android:textStyle="normal"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:text="10M"
                        android:textColor="@color/gradient_end_color"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Following"
                        android:textSize="20sp"
                        android:textStyle="normal"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:text="15"
                        android:textColor="@color/gradient_end_color"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                
            </LinearLayout>
            
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_below="@+id/cardd_view"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:src="@drawable/profile_person_icon"
                    android:layout_marginLeft="15dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="nikam vinay"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:src="@drawable/profile_personemail"
                    android:layout_marginLeft="10dp"
                    android:layout_height="35dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="vinaynikam@gmail.com"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>



        </LinearLayout>
        


    </RelativeLayout>













</LinearLayout>