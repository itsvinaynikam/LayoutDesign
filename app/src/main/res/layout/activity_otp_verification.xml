<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.OtpVerification">

    <LinearLayout
        android:id="@+id/virification_linerlayout"
        android:orientation="horizontal"
        android:background="@drawable/app_background_colour"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">

      <!--  <ImageView
            android:layout_width="40dp"
            android:layout_margin="15dp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:layout_height="40dp"/>-->

        <TextView
            android:layout_width="match_parent"
            android:textSize="25dp"
            android:text="Verification"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="681dp"
        android:layout_below="@id/virification_linerlayout"
        android:layout_marginTop="-11dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/virification_linerlayout"
            android:paddingLeft="30dp"
            android:text="Enter Code"
            android:textColor="@color/gradient_end_color"
            android:textSize="20dp"
            android:textStyle="bold" />

        <com.chaos.view.PinView
            android:id="@+id/otp_editetext"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="numberPassword"
            android:paddingLeft="20dp"
            android:textSize="10dp"
            app:cursorColor="@color/gradient_end_color"
            app:itemCount="4"
            app:itemHeight="55dp"
            app:itemRadius="30dp"
            app:itemSpacing="20dp"
            app:itemWidth="70dp"
            app:lineColor="#E4C6BEBE" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_verfiction"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:layout_marginRight="30dp"
        android:text="Verfiction"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/shapppe" />


</RelativeLayout>